{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "plugins": [
    "standard",
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 5
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-var": "error",
    "no-console": "off",
    "max-len": [
      "warn",
      {
        "code": 80
      }
    ],
    "standard/object-curly-even-spacing": [
      "error",
      "either"
    ],
    "standard/array-bracket-even-spacing": [
      "error",
      "either"
    ],
    "standard/computed-property-even-spacing": [
      "error",
      "even"
    ],
    "standard/no-callback-literal": [
      "error",
      [
        "cb",
        "callback"
      ]
    ],
    "import/no-unresolved": 2
  }
}
